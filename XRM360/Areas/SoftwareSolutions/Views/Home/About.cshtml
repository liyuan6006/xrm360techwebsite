@{
    ViewData["Title"] = "Who We Are";
}

<div class="container py-5">
    <h1 class="section-title">Who We Are</h1>
    <p class="lead-muted mb-4">A hands-on team focused on shipping reliable software with clean architecture and security-first practices.</p>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold mb-2">Principles</h5>
                <ul class="mb-0">
                    <li><strong>Do it right:</strong> performance, security, maintainability.</li>
                    <li><strong>Own your stack:</strong> no lock-in, clean handover.</li>
                    <li><strong>Iterate fast:</strong> frequent demos & feedback.</li>
                    <li><strong>Be clear:</strong> transparent scope and pricing.</li>
                </ul>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold mb-2">Process</h5>
                <ol class="mb-0">
                    <li>Discover & Plan</li>
                    <li>Design UX/UI</li>
                    <li>Build & Integrate</li>
                    <li>Test & Harden</li>
                    <li>Launch & Support</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="card card-soft p-4 mt-4">
        <h5 class="fw-bold mb-2">Tech & Tools</h5>
        <p class="mb-0">.NET / ASP.NET Core, Angular/React, PostgreSQL/SQL Server, Kubernetes, Jenkins/Helm, Redis, LDAP/OIDC, REST/SOAP/GraphQL, Power BI/Tableau.</p>
    </div>
</div>
