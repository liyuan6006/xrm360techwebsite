@{
    ViewData["Title"] = "Cases";
}

<div class="container py-5">
    <h1 class="section-title">Successful Cases</h1>
    <p class="lead-muted mb-4">A few highlights from recent work.</p>

    <div class="row g-4">
        <div class="col-md-6 col-lg-4">
            <div class="card card-soft h-100">
                <img src="/images/tech/buildwebsite-bg.png" class="card-img-top" alt="Custom Website">
                <div class="card-body">
                    <h5 class="card-title">Custom Company Website</h5>
                    <p class="card-text">Multi-language, custom slider, SMTP forms, Google Maps embed, and full design control.</p>
                    <span class="badge-soft">Web</span>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card card-soft h-100">
                <img src="/images/tech/case-dbmigration.png" class="card-img-top" alt="DB Migration">
                <div class="card-body">
                    <h5 class="card-title">SQL → PostgreSQL Migration</h5>
                    <p class="card-text">Zero data loss, tuned indexing, and minimal-downtime cutover for a financial platform.</p>
                    <span class="badge-soft">Data</span>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card card-soft h-100">
                <img src="/images/tech/case-buildapp.png" class="card-img-top" alt="App">
                <div class="card-body">
                    <h5 class="card-title">Charity Verification App</h5>
                    <p class="card-text">AuthN/AuthZ, responsive UI, and Google Maps API for secure org validation.</p>
                    <span class="badge-soft">Apps</span>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card card-soft h-100">
                <img src="/images/tech/cicd_kubernetes2.png" class="card-img-top" alt="Kubernetes">
                <div class="card-body">
                    <h5 class="card-title">CI/CD to Kubernetes</h5>
                    <p class="card-text">Jenkins + Helm, reusable charts, zero-downtime deploys, and observability.</p>
                    <span class="badge-soft">DevOps</span>
                </div>
            </div>
        </div>
    </div>
</div>
