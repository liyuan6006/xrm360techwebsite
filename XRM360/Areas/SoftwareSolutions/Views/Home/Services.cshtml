@{
    ViewData["Title"] = "What We Do";
}

<div class="container py-5">
    <h1 class="section-title">What We Do</h1>
    <p class="lead-muted mb-4">End-to-end delivery across build, migration, integration, and analytics.</p>

    <div class="row g-4">
        <!-- Custom Websites -->
        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-window-dock me-2 text-primary"></i>Custom Websites (No Monthly Builder Fees)</h5>
                <ul class="mb-0">
                    <li>Built from scratch — no rigid templates</li>
                    <li>Domain, hosting, SSL, deployment, email setup (or guidance for self-purchase)</li>
                    <li>Multi-language support</li>
                    <li>Integrated email service and Google Maps</li>
                    <li>Responsive design for desktop, tablet, and mobile</li>
                </ul>
            </div>
        </div>

        <!-- Complex Application Development -->
        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-phone-flip me-2 text-primary"></i>Complex Application Development</h5>
                <ul class="mb-0">
                    <li>Responsive web & mobile-friendly UIs</li>
                    <li>Heavy business logic & workflow automation</li>
                    <li>Robust database design & management</li>
                    <li>Secure, scalable APIs (.NET, REST, GraphQL)</li>
                    <li>Role-based access control</li>
                    <li>Scalable architecture for growth</li>
                    <li>Agile delivery with iterative demos</li>
                </ul>
            </div>
        </div>

        <!-- Database Migration -->
        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-database-gear me-2 text-primary"></i>Database Migration</h5>
                <ul class="mb-0">
                    <li>Zero data loss</li>
                    <li>SQL Server ⇄ PostgreSQL</li>
                    <li>Oracle, MySQL, MongoDB</li>
                    <li>Relational ⇄ Non-relational</li>
                    <li>Performance tuning & indexing</li>
                    <li>Minimal-downtime cutovers</li>
                    <li>Data cleansing & validation</li>
                </ul>
            </div>
        </div>

        <!-- Enterprise Integrations -->
        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-diagram-3 me-2 text-primary"></i>Enterprise Integrations</h5>
                <ul class="mb-0">
                    <li>Secure, high-performance APIs</li>
                    <li>REST / SOAP / GraphQL</li>
                    <li>SMTP email integration</li>
                    <li>LDAP / OIDC authentication</li>
                    <li>Integration with Rally, Jira, Vault, Redis</li>
                    <li>Single Sign-On (SSO) enablement</li>
                    <li>Cross-platform data synchronization</li>
                </ul>
            </div>
        </div>

        <!-- Data Visualization -->
        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-bar-chart-line me-2 text-primary"></i>Data Visualization</h5>
                <ul class="mb-0">
                    <li>Power BI, Tableau, Python data stacks</li>
                    <li>Custom KPI dashboards</li>
                    <li>Real-time performance tracking</li>
                    <li>Interactive charts & drill-down reports</li>
                    <li>Data aggregation from multiple sources</li>
                    <li>Exportable reports (PDF, Excel)</li>
                </ul>
            </div>
        </div>

        <!-- Expert Consulting -->
        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-compass me-2 text-primary"></i>Expert Consulting</h5>
                <ul class="mb-0">
                    <li>Technology strategy & roadmaps</li>
                    <li>Vendor-neutral, outcome-focused</li>
                    <li>No-code/low-code recommendations when appropriate</li>
                    <li>Cost-benefit analysis for projects</li>
                </ul>
            </div>
        </div>
    </div>


    <div class="text-center mt-4">
        <a asp-action="Contact" class="btn btn-brand"><i class="bi bi-envelope-paper-heart me-2"></i>Start a conversation</a>
    </div>
</div>
