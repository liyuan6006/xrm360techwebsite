@{
    ViewData["Title"] = "Pricing";
}

<div class="container py-5">
    <h1 class="section-title">Simple, Transparent Pricing</h1>
    <p class="lead-muted mb-4">You own the code, domain, and assets. Optional support plans available.</p>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card card-soft h-100">
                <div class="card-body">
                    <h5 class="fw-bold mb-1">Starter Website</h5>
                    <div class="display-6 fw-bold">$1,200–$2,500</div>
                    <ul class="mt-3 mb-0">
                        <li>Up to 5 pages</li>
                        <li>Responsive design</li>
                        <li>Contact form (SMTP)</li>
                        <li>Basic SEO</li>
                    </ul>
                    <a asp-action="Contact" class="btn btn-brand mt-3 w-100">Get a Quote</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-soft h-100 border border-primary">
                <div class="card-body">
                    <h5 class="fw-bold mb-1">Business Site</h5>
                    <div class="display-6 fw-bold">$3,500–$7,000</div>
                    <ul class="mt-3 mb-0">
                        <li>Custom components</li>
                        <li>CMS or admin panel</li>
                        <li>Multi-language</li>
                        <li>Analytics & SEO setup</li>
                    </ul>
                    <a asp-action="Contact" class="btn btn-brand mt-3 w-100">Get a Quote</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-soft h-100">
                <div class="card-body">
                    <h5 class="fw-bold mb-1">Apps / Migrations</h5>
                    <div class="display-6 fw-bold">Custom</div>
                    <ul class="mt-3 mb-0">
                        <li>Full-stack apps</li>
                        <li>DB migrations & upgrades</li>
                        <li>Integrations & automation</li>
                        <li>Performance & security</li>
                    </ul>
                    <a asp-action="Contact" class="btn btn-brand mt-3 w-100">Talk to Us</a>
                </div>
            </div>
        </div>
    </div>

    <p class="lead-muted mt-4"><i class="bi bi-life-preserver me-1"></i> Ongoing support from $150/mo: updates, monitoring, backups.</p>
</div>
