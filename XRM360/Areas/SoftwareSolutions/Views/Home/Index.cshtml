@{
    ViewData["Title"] = "Home";
}

<section class="hero">
    <div class="container">
        <p class="eyebrow mb-2">XRM360 Software</p>
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-5 mb-3">Custom Software. <span class="text-primary">Built Right.</span></h1>
                <p class="lead lead-muted">Websites, apps, data, and integrations—delivered with clean architecture, security, and ownership.</p>
                <div class="d-flex gap-2 mt-3">
                    <a asp-action="Services" class="btn btn-brand"><i class="bi bi-rocket-takeoff me-2"></i>What We Do</a>
                    <a asp-action="Cases" class="btn btn-ghost"><i class="bi bi-collection me-2"></i>See Cases</a>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="card card-soft p-4">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge-soft me-2">Highlights</span>
                    </div>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-window-sidebar me-2 text-primary"></i>
                            Fully custom websites (no monthly builder fees)
                        </li>
                        <li>
                            <i class="bi bi-code-slash me-2 text-primary"></i>
                            Complex applications with heavy logic and databases
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-hdd-network me-2 text-primary"></i>
                            Enterprise integrations with secure, high-performance APIs
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-database-check me-2 text-primary"></i>
                            Database migrations — relational ⇄ non-relational
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-bar-chart-line me-2 text-primary"></i>
                            Actionable dashboards & data visualization
                        </li>
                     
                    </ul>

                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <h2 class="section-title">Three ways we drive impact</h2>
        <p class="lead-muted mb-4">From new builds to modernization and insights.</p>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card card-soft p-4 h-100">
                    <h5 class="fw-bold"><i class="bi bi-code-slash me-2 text-primary"></i>Build & Launch</h5>
                    <p class="mb-3">Handcrafted apps and sites tailored to your workflows and brand.</p>
                    <a asp-action="Services" class="btn btn-sm btn-ghost">Explore services</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-soft p-4 h-100">
                    <h5 class="fw-bold"><i class="bi bi-arrow-repeat me-2 text-primary"></i>Migrate & Integrate</h5>
                    <p class="mb-3">Modernize databases, move to .NET Core, and connect platforms securely.</p>
                    <a asp-action="Cases" class="btn btn-sm btn-ghost">See success stories</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-soft p-4 h-100">
                    <h5 class="fw-bold"><i class="bi bi-graph-up-arrow me-2 text-primary"></i>Visualize & Decide</h5>
                    <p class="mb-3">Turn raw data into dashboards that leaders actually use.</p>
                    <a asp-action="Pricing" class="btn btn-sm btn-ghost">View pricing</a>
                </div>
            </div>
        </div>
    </div>
</section>
