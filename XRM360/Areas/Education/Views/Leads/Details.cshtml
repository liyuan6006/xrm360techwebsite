@model XRM360website.Models.StudentLead
@{
    ViewData["Title"] = "Lead Details";
}

<section class="hero">
    <div class="container">
        <h2 class="mb-3">Lead Details</h2>

        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.FullName)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.FullName) ? Model.FullName : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Email)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Email) ? Model.Email : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Phone)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Phone) ? Model.Phone : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.WeChatId)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.WeChatId) ? Model.WeChatId : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.PreferredContact)</dt>
            <dd class="col-sm-9">@Model.PreferredContact</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.StudyLevel)</dt>
            <dd class="col-sm-9">@Model.StudyLevel</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.IntendedMajor)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.IntendedMajor) ? Model.IntendedMajor : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.TargetStartTerm)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.TargetStartTerm) ? Model.TargetStartTerm : "—")</dd>

            
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.TargetSchools)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.TargetSchools) ? Model.TargetSchools : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.TargetRegion)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.TargetRegion) ? Model.TargetRegion : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CurrentCity)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.CurrentCity) ? Model.CurrentCity : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CountryOfCitizenship)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.CountryOfCitizenship) ? Model.CountryOfCitizenship : "—")</dd>


            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CurrentHighSchool)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.CurrentHighSchool) ? Model.CurrentHighSchool : "—")</dd>

        

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CurrentGPA)</dt>
            <dd class="col-sm-9">@(Model.CurrentGPA.HasValue ? Model.CurrentGPA.Value.ToString("0.00") : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.EnglishType)</dt>
            <dd class="col-sm-9">@Model.EnglishType</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.EnglishTestDate)</dt>
            <dd class="col-sm-9">@(Model.EnglishTestDate.HasValue ? Model.EnglishTestDate.Value.ToString("yyyy-MM-dd") : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.EnglishScore)</dt>
            <dd class="col-sm-9">@(Model.EnglishScore.HasValue ? Model.EnglishScore.Value.ToString() : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.EnglishStatus)</dt>
            <dd class="col-sm-9">@Model.EnglishStatus</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.TargetBudget)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.TargetBudget) ? Model.TargetBudget : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Notes)</dt>
            <dd class="col-sm-9"> @(!string.IsNullOrWhiteSpace(Model.Notes) ? Model.Notes : "—")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedUtc)</dt>
            <dd class="col-sm-9">@Model.CreatedUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>

            @* If you added ModifiedUtc:
            <dt class="col-sm-3">Last Modified</dt>
            <dd class="col-sm-9">@((Model.ModifiedUtc?.ToLocalTime().ToString("yyyy-MM-dd HH:mm")) ?? "—")</dd>
            *@
        </dl>

        <div class="mt-3">
            <a asp-area="Education" asp-controller="Leads" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-brand">Update</a>
            <a asp-area="Education" asp-controller="Leads" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">Delete</a>
            <a asp-area="Education" asp-controller="Leads" asp-action="Index" class="btn btn-link ms-2">Back</a>
        </div>
    </div>
</section>
