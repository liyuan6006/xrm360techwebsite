@model XRM360website.Models.StudentLead
@{
    ViewData["Title"] = "Lead Details";
}

<section class="hero">
    <div class="container">
        <h2>Lead Details</h2>

        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>
            <dt class="col-sm-3">WeChat ID</dt>
            <dd class="col-sm-9">@Model.WeChatId</dd>
            <dt class="col-sm-3">Preferred Contact</dt>
            <dd class="col-sm-9">@Model.PreferredContact</dd>
            <dt class="col-sm-3">Study Level</dt>
            <dd class="col-sm-9">@Model.StudyLevel</dd>
            <dt class="col-sm-3">Intended Major</dt>
            <dd class="col-sm-9">@Model.IntendedMajor</dd>
            <dt class="col-sm-3">Target Start Term</dt>
            <dd class="col-sm-9">@Model.TargetStartTerm</dd>
            <dt class="col-sm-3">Current City</dt>
            <dd class="col-sm-9">@Model.CurrentCity</dd>
            <dt class="col-sm-3">Citizenship</dt>
            <dd class="col-sm-9">@Model.CountryOfCitizenship</dd>
            <dt class="col-sm-3">English Test</dt>
            <dd class="col-sm-9">@Model.EnglishStatus</dd>
            <dt class="col-sm-3">Budget Range</dt>
            <dd class="col-sm-9">@Model.BudgetRangeUsd</dd>
            <dt class="col-sm-3">Lead Source</dt>
            <dd class="col-sm-9">@Model.Source</dd>
            <dt class="col-sm-3">Notes</dt>
            <dd class="col-sm-9">@Model.Notes</dd>
            <dt class="col-sm-3">Created (UTC)</dt>
            <dd class="col-sm-9">@Model.CreatedUtc</dd>
        </dl>

        <div class="mt-3">
            <a asp-area="Education" asp-controller="Leads" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-brand">Update</a>
            <a asp-area="Education" asp-controller="Leads" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">Delete</a>
            <a asp-area="Education" asp-controller="Leads" asp-action="Index" class="btn btn-link ms-2">Back</a>
        </div>
    </div>
</section>