@model XRM360website.Models.StudentLead
@{
    ViewData["Title"] = "Edit Lead";
}

<section class="hero">
    <div class="container">
        <h2>Edit Lead</h2>


        <form asp-action="Edit" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-6">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="WeChatId" class="form-label"></label>
                <input asp-for="WeChatId" class="form-control" />
                <span asp-validation-for="WeChatId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="PreferredContact" class="form-label"></label>
                <select asp-for="PreferredContact" class="form-select" asp-items="ViewBag.ContactMethods"></select>
                <span asp-validation-for="PreferredContact" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="StudyLevel" class="form-label"></label>
                <select asp-for="StudyLevel" class="form-select" asp-items="ViewBag.StudyLevels"></select>
                <span asp-validation-for="StudyLevel" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="IntendedMajor" class="form-label"></label>
                <input asp-for="IntendedMajor" class="form-control" />
                <span asp-validation-for="IntendedMajor" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="TargetStartTerm" class="form-label"></label>
                <input asp-for="TargetStartTerm" class="form-control" />
                <span asp-validation-for="TargetStartTerm" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CurrentCity" class="form-label"></label>
                <input asp-for="CurrentCity" class="form-control" />
                <span asp-validation-for="CurrentCity" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CountryOfCitizenship" class="form-label"></label>
                <input asp-for="CountryOfCitizenship" class="form-control" />
                <span asp-validation-for="CountryOfCitizenship" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="EnglishStatus" class="form-label"></label>
                <select asp-for="EnglishStatus" class="form-select" asp-items="ViewBag.EnglishStatuses"></select>
                <span asp-validation-for="EnglishStatus" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="BudgetRangeUsd" class="form-label"></label>
                <input asp-for="BudgetRangeUsd" class="form-control" />
                <span asp-validation-for="BudgetRangeUsd" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Source" class="form-label"></label>
                <select asp-for="Source" class="form-select" asp-items="ViewBag.LeadSources"></select>
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="col-12 mt-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-area="Education" asp-controller="Leads" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-link">Cancel</a>
            </div>
        </form>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
