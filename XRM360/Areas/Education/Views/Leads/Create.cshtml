@model XRM360website.Models.StudentLead
@{
    ViewData["Title"] = "Student Intake (Initial)";
}

<style>
    /* Chrome, Safari, Edge */
    input[type=number]::-webkit-outer-spin-button,
    input[type=number]::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>
<section class="hero">
    <div class="container">
        <h2 class="mb-3">Tell us about you</h2>
        <p class="text-muted">This is a short form so we can understand your goals and follow up.</p>
        <p class="eyebrow mb-2">XRM360 Education</p>
        <form asp-action="Create" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Existing fields -->
            <div class="col-md-6">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="WeChatId" class="form-label"></label>
                <input asp-for="WeChatId" class="form-control" />
                <span asp-validation-for="WeChatId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="PreferredContact" class="form-label"></label>
                <select asp-for="PreferredContact" class="form-select" asp-items="ViewBag.ContactMethods"></select>
                <span asp-validation-for="PreferredContact" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="StudyLevel" class="form-label"></label>
                <select asp-for="StudyLevel" class="form-select" asp-items="ViewBag.StudyLevels"></select>
                <span asp-validation-for="StudyLevel" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="IntendedMajor" class="form-label"></label>
                <input asp-for="IntendedMajor" class="form-control" placeholder="e.g., Computer Science" />
                <span asp-validation-for="IntendedMajor" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="TargetStartTerm" class="form-label"></label>
                <input asp-for="TargetStartTerm" class="form-control" placeholder="e.g., 2026 Fall" />
                <span asp-validation-for="TargetStartTerm" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="TargetSchools" class="form-label"></label>
                <textarea asp-for="TargetSchools" class="form-control" placeholder="List up to 5 schools, separated by commas or lines"></textarea>
                <span asp-validation-for="TargetSchools" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="TargetRegion" class="form-label"></label>
                <textarea asp-for="TargetRegion" class="form-control" placeholder="e.g., East Coast, California" ></textarea>
                <span asp-validation-for="TargetRegion" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="CurrentCity" class="form-label"></label>
                <input asp-for="CurrentCity" class="form-control" placeholder="City where you live now" />
                <span asp-validation-for="CurrentCity" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CountryOfCitizenship" class="form-label"></label>
                <input asp-for="CountryOfCitizenship" class="form-control" />
                <span asp-validation-for="CountryOfCitizenship" class="text-danger"></span>
            </div>

          
            <!-- New fields -->
            <div class="col-md-6">
                <label asp-for="CurrentHighSchool" class="form-label"></label>
                <input asp-for="CurrentHighSchool" class="form-control" />
                <span asp-validation-for="CurrentHighSchool" class="text-danger"></span>
            </div>
         
            <div class="col-md-6">
                <label asp-for="CurrentGPA" class="form-label"></label>
                <input asp-for="CurrentGPA" class="form-control" />
                <span asp-validation-for="CurrentGPA" class="text-danger"></span>
            </div>


           

            <div class="col-md-6">
                <label asp-for="EnglishType" class="form-label"></label>
                <select asp-for="EnglishType" class="form-select" asp-items="ViewBag.EnglishType"></select>
                <span asp-validation-for="EnglishType" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="EnglishTestDate" class="form-label"></label>
                <input asp-for="EnglishTestDate" type="date" class="form-control" />
                <span asp-validation-for="EnglishTestDate" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="EnglishScore" class="form-label"></label>
                <input asp-for="EnglishScore" class="form-control" />
                <span asp-validation-for="EnglishScore" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="EnglishStatus" class="form-label"></label>
                <select asp-for="EnglishStatus" class="form-select" asp-items="ViewBag.EnglishStatuses"></select>
                <span asp-validation-for="EnglishStatus" class="text-danger"></span>
            </div>

            <!-- Notes -->
            <div class="col-12">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" rows="4" class="form-control" placeholder="Anything else we should know?"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="UtmSource" />

            <div class="col-12">
                <button type="submit" class="btn btn-brand">Submit</button>
                <a asp-area="Education" asp-controller="Leads" asp-action="Index" class="btn btn-link ms-2">Back</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
