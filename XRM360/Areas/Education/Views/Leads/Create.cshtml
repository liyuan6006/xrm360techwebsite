@model XRM360website.Models.StudentLead
@{
    ViewData["Title"] = "Student Intake (Initial)";
}

<h2 class="mb-3">Tell us about you</h2>
<p class="text-muted">This is a short form so we can understand your goals and follow up.</p>

<form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="WeChatId" class="form-label"></label>
        <input asp-for="WeChatId" class="form-control" />
        <span asp-validation-for="WeChatId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="PreferredContact" class="form-label"></label>
        <select asp-for="PreferredContact" class="form-select" asp-items="ViewBag.ContactMethods"></select>
        <span asp-validation-for="PreferredContact" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="StudyLevel" class="form-label"></label>
        <select asp-for="StudyLevel" class="form-select" asp-items="ViewBag.StudyLevels"></select>
        <span asp-validation-for="StudyLevel" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="IntendedMajor" class="form-label"></label>
        <input asp-for="IntendedMajor" class="form-control" placeholder="e.g., Computer Science" />
        <span asp-validation-for="IntendedMajor" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="TargetStartTerm" class="form-label"></label>
        <input asp-for="TargetStartTerm" class="form-control" placeholder="e.g., 2026 Fall" />
        <span asp-validation-for="TargetStartTerm" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="CurrentCity" class="form-label"></label>
        <input asp-for="CurrentCity" class="form-control" placeholder="City where you live now" />
        <span asp-validation-for="CurrentCity" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="CountryOfCitizenship" class="form-label"></label>
        <input asp-for="CountryOfCitizenship" class="form-control" />
        <span asp-validation-for="CountryOfCitizenship" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="EnglishStatus" class="form-label"></label>
        <select asp-for="EnglishStatus" class="form-select" asp-items="ViewBag.EnglishStatuses"></select>
        <span asp-validation-for="EnglishStatus" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="BudgetRangeUsd" class="form-label"></label>
        <input asp-for="BudgetRangeUsd" class="form-control" placeholder="e.g., 20k–40k / year" />
        <span asp-validation-for="BudgetRangeUsd" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Source" class="form-label"></label>
        <select asp-for="Source" class="form-select" asp-items="ViewBag.LeadSources"></select>
        <span asp-validation-for="Source" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" rows="4" class="form-control" placeholder="Anything else we should know?"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="UtmSource" />

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
