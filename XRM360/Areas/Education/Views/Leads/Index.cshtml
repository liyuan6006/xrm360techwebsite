@model IEnumerable<XRM360website.Models.StudentLead>
@{
    ViewData["Title"] = "Leads";
}


<section class="hero">
    <div class="container">
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Student Leads</h2>
            <a asp-area="Education" asp-controller="Leads" asp-action="Create" class="btn btn-brand me-2">+ Create</a>
        
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>When (UTC)</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>WeChat</th>
            <th>Level</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var l in Model)
        {
            <tr>
                <td>@l.CreatedUtc.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@l.FullName</td>
                <td>@l.Email</td>
                <td>@l.Phone</td>
                <td>@l.WeChatId</td>
                <td>@l.StudyLevel</td>
                <td class="text-end">
                    <a asp-area="Education" asp-controller="Leads" asp-action="Details" asp-route-id="@l.Id" class="btn btn-sm btn-brand-outline">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
</section>