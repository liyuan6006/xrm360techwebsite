@model IEnumerable<XRM360website.Models.StudentLead>
@{
    ViewData["Title"] = "Leads";
}


<section class="hero">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
            <h2 class="mb-2 mb-sm-0">Student Leads</h2>
            <a asp-area="Education" asp-controller="Leads" asp-action="Create" class="btn btn-brand me-2">+ Create</a>
        </div>

        <!-- Responsive table wrapper -->
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>WeChat</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in Model)
                    {
                        <tr>
                            <td>@l.FullName</td>
                            <td>@l.Phone</td>
                            <td>@l.WeChatId</td>
                            <td class="text-end">
                                <a asp-area="Education" asp-controller="Leads" asp-action="Details" asp-route-id="@l.Id" class="btn btn-sm btn-brand-outline">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
