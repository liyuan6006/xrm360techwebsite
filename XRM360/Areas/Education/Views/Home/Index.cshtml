<!-- =========================================
  Areas/Education/Views/Home/Index.cshtml (Home)
========================================= -->
@{
    ViewData["Title"] = "Home";
}

<style>
  /* Keep a nice aspect ratio; swap to fixed height if you prefer */
  .carousel-img {
    aspect-ratio: 16/9;
    object-fit: cover;
  }
  /* Soft readable caption on any background */
  .bg-blur {
    backdrop-filter: blur(6px);
    background: rgba(0,0,0,.35);
  }

  /* Optional: compact height on small screens */
  @@media (max-width: 575.98px) {
    .carousel-img { aspect-ratio: 4/3; }
  }
</style>

<section class="hero">
    <div class="container">
       @*  <p class="eyebrow mb-2">XRM360 Education</p> *@
        <div class="row align-items-stretch g-4">
            <!-- LEFT -->
            <div class="col-lg-6 text-white-90">
                <img src="/images/edu/xrm360-edu-logo.png" alt="Edu Logo" class="img-fluid" />
                @*  <h1 class="display-5 mb-3">Your U.S. Study Journey <span style="color:var(--brand)">Starts Here</span></h1> *@
                <p>
                    <span style="color:var(--brand); font-weight:bold;">My360 International Education</span> provides tailored support for Chinese students seeking university opportunities in the US.
                    We provide services from application support, arrival assistance, maintaining your immigration status, and navigating academic policies.
                    Founded by Chinese and American international higher education professionals with more than <span style="color:var(--brand);">20 years experience</span>, we are well-equipped to help you succeed.
                    Together, we can ensure <b>360-degree support</b> that surrounds you at every stage of your academic and professional journey.
                </p>


                <div class="d-flex gap-2 mt-3">
                    <a asp-action="Services" class="btn btn-brand"><i class="bi bi-rocket-takeoff me-2"></i>Our Services</a>
                    <a asp-action="Pricing" class="btn btn-ghost"><i class="bi bi-cash-coin me-2"></i>Pricing</a>
                </div>
            </div>

            <!-- RIGHT -->
            <div class="col-lg-6 d-flex">
                <div class="card card-soft p-0 overflow-hidden w-100 h-100">
                    <div id="eduCarousel" class="carousel slide h-100" data-bs-ride="carousel" data-bs-interval="4500">
                        <!-- Dots -->
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#eduCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Applications"></button>
                            <button type="button" data-bs-target="#eduCarousel" data-bs-slide-to="1" aria-label="Visa & Arrival"></button>
                            <button type="button" data-bs-target="#eduCarousel" data-bs-slide-to="2" aria-label="Campus Life"></button>
                        </div>

                        <!-- Slides -->
                        <div class="carousel-inner h-100">
                            <!-- Slide 1 -->
                            <div class="carousel-item active h-100">
                                <img src="/images/edu/slide1.png" class="d-block w-100 carousel-img" alt="Applications">
                                <div class="bg-light bg-opacity-75 rounded shadow p-3 m-3">
                                    <h5 class="mb-1">
                                        <i class="bi bi-journal-text me-2" style="color:var(--brand)"></i>Applications
                                    </h5>
                                    <p>
                                        Right now we’re working with high school seniors polishing their personal statements
                                        and preparing scholarship essays. We also help transfer and graduate applicants
                                        build strong application packages that highlight their achievements and meet
                                        upcoming deadlines.
                                    </p>
                                </div>
                            </div>

                            <!-- Slide 2 -->
                            <div class="carousel-item h-100">
                                <img src="/images/edu/slide2.png" class="d-block w-100 carousel-img" alt="Visa & Arrival">
                                <div class="bg-light bg-opacity-75 rounded shadow p-3 m-3">
                                    <h5 class="mb-1">
                                        <i class="bi bi-airplane me-2" style="color:var(--brand)"></i>Visa & Arrival
                                    </h5>
                                    <p>
                                        This month we’re running mock F-1 visa interviews, reviewing DS-160 forms, and
                                        guiding students on I-20 preparation. We’re also helping new admits with pre-departure
                                        packing checklists, travel tips, and housing arrangements for their first week in the U.S.
                                    </p>
                                </div>
                            </div>

                            <!-- Slide 3 -->
                            <div class="carousel-item h-100">
                                <img src="/images/edu/slide3.png" class="d-block w-100 carousel-img" alt="Campus Life">
                                <div class="bg-light bg-opacity-75 rounded shadow p-3 m-3">
                                    <h5 class="mb-1">
                                        <i class="bi bi-people me-2" style="color:var(--brand)"></i>Campus Life
                                    </h5>
                                    <p>
                                        We’re currently mentoring students adjusting to campus life, from setting up
                                        bank accounts and phone plans to understanding CPT/OPT options. Our ongoing
                                        support ensures they stay compliant with F-1 rules while making the most of
                                        their academic and professional opportunities.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Arrows -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#eduCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span><span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#eduCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span><span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <h2 class="section-title">How we help</h2>
        <p class="lead-muted mb-4">Clear steps for students and peace of mind for parents.</p>
        <div class="row g-4">
            <!-- Applications -->
            <div class="col-md-6 col-lg-4">
                <div class="card card-soft p-4 h-100">
                    <h5 class="fw-bold">
                        <i class="bi bi-journal-text me-2" style="color:var(--brand)"></i>
                        Applications
                    </h5>
                    <p class="mb-0">
                        Whether you need just one piece (DIY) or want it all (VIP), we can assist with
                        applications for undergraduate, graduate, transfers and scholarships.
                    </p>
                </div>
            </div>

            <!-- Arrivals -->
            <div class="col-md-6 col-lg-4">
                <div class="card card-soft p-4 h-100">
                    <h5 class="fw-bold">
                        <i class="bi bi-airplane me-2" style="color:var(--brand)"></i>
                        Arrivals
                    </h5>
                    <p class="mb-0">
                        Visa application assistance, pre-departure prep, arrival support.
                    </p>
                </div>
            </div>

            <!-- F-1 Student Status -->
            <div class="col-md-6 col-lg-4">
                <div class="card card-soft p-4 h-100">
                    <h5 class="fw-bold">
                        <i class="bi bi-passport me-2" style="color:var(--brand)"></i>
                        F-1 Student Status
                    </h5>
                    <p class="mb-0">
                        Tips and support to maintain your status (SEVIS terminations/reinstatement, full
                        time enrollment, etc) and take advantage of your status benefits (like CPT/OPT,
                        STEM extension, etc).
                    </p>
                </div>
            </div>

            <!-- Academic Policy Issues -->
            <div class="col-md-6 col-lg-4">
                <div class="card card-soft p-4 h-100">
                    <h5 class="fw-bold">
                        <i class="bi bi-shield-exclamation me-2" style="color:var(--brand)"></i>
                        Academic Policy Issues
                    </h5>
                    <p class="mb-0">
                        Academic Integrity and Dismissals.
                    </p>
                </div>
            </div>

            <!-- About Us -->
            <div class="col-md-6 col-lg-4">
                <div class="card card-soft p-4 h-100">
                    <h5 class="fw-bold">
                        <i class="bi bi-people me-2" style="color:var(--brand)"></i>
                        About Us
                    </h5>
                    <p class="mb-0">
                        Meet the team of U.S. higher-ed professionals behind your 360° support. 
                   
                        <a asp-action="About" class="btn btn-ghost">  <i class="bi bi-info-circle me-2"></i>Learn more →</a>
                    </p>
                </div>
            </div>
        </div>

    </div>
</section>