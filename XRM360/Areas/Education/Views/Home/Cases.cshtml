@{
    ViewData["Title"] = "Cases";
}

<div class="container py-5">
    <h1 class="section-title">Admissions Success</h1>
    <p class="lead-muted mb-4">A few anonymized wins that show our approach.</p>

    <div class="row g-4">
        <div class="col-md-6 col-lg-4">
            <div class="card card-soft h-100">
                <img src="/images/edu/case-campus-1.jpg" class="card-img-top" alt="Case 1">
                <div class="card-body">
                    <h5 class="card-title">STEM Major · West Coast</h5>
                    <p class="card-text">Balanced list crafted from GPA 3.6 / IELTS 7.0. Offers from 2 reach, 3 target schools.</p>
                    <span class="badge-soft">Undergraduate</span>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card card-soft h-100">
                <img src="/images/edu/case-campus-2.jpg" class="card-img-top" alt="Case 2">
                <div class="card-body">
                    <h5 class="card-title">Business · Midwest</h5>
                    <p class="card-text">Essay strategy workshop led to scholarship at a target university; two more acceptances.</p>
                    <span class="badge-soft">Scholarship</span>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card card-soft h-100">
                <img src="/images/edu/case-campus-3.jpg" class="card-img-top" alt="Case 3">
                <div class="card-body">
                    <h5 class="card-title">Art & Design · East Coast</h5>
                    <p class="card-text">Portfolio curation + timeline discipline → 4/6 admits including a reach program.</p>
                    <span class="badge-soft">Portfolio</span>
                </div>
            </div>
        </div>
    </div>
</div>
