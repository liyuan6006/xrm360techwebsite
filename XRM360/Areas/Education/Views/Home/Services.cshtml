<!-- =========================================
  Areas/Education/Views/Home/Services.cshtml (Services)
========================================= -->
@{
    ViewData["Title"] = "Services";
}

<div class="container py-5">
    <h1 class="section-title">Services</h1>
    <p class="lead-muted mb-4">End‑to‑end support—before, during, and after admissions.</p>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-list-task me-2" style="color:var(--brand)"></i>Application Preparation</h5>
                <ul class="mb-0">
                    <li>Checklist & templates for required documents</li>
                    <li>Transcripts, test scores, essays, and recommendations</li>
                    <li>Timeline & portal submission guidance</li>
                </ul>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-mortarboard me-2" style="color:var(--brand)"></i>Best‑Fit University List</h5>
                <ul class="mb-0">
                    <li>Reach / Target / Safety strategy</li>
                    <li>Program matching by goals and budget</li>
                    <li>Parent consultations in Chinese</li>
                </ul>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-file-earmark-check me-2" style="color:var(--brand)"></i>Submission & Follow‑ups</h5>
                <ul class="mb-0">
                    <li>Account setup, uploads, fee payments</li>
                    <li>Status checks & communication with schools</li>
                    <li>Progress tracking for parents</li>
                </ul>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-airplane-engines me-2" style="color:var(--brand)"></i>Visa & Pre‑Departure</h5>
                <ul class="mb-0">
                    <li>I‑20 and DS‑160 review</li>
                    <li>Interview preparation</li>
                    <li>Flight, packing, and insurance guidance</li>
                </ul>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-geo-alt me-2" style="color:var(--brand)"></i>Arrival & Settlement</h5>
                <ul class="mb-0">
                    <li>Housing tips & roommate matching</li>
                    <li>Bank/phone setup and orientation help</li>
                    <li>Campus life and safety essentials</li>
                </ul>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold"><i class="bi bi-people-fill me-2" style="color:var(--brand)"></i>Ongoing Mentorship</h5>
                <ul class="mb-0">
                    <li>Check‑ins during first year</li>
                    <li>Networking & career workshops</li>
                    <li>Academic resources & tutoring referrals</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Contact" class="btn btn-brand"><i class="bi bi-chat-dots me-2"></i>Talk to an advisor</a>
    </div>
</div>
