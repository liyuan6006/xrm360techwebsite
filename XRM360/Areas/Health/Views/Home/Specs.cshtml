<!-- =========================================
  Areas/Health/Views/Home/Specs.cshtml (Technical Specs)
========================================= -->
@{
    ViewData["Title"] = "Specs";
}

<div class="container py-5">
    <h1 class="section-title">Technical Specifications</h1>
    <p class="lead-muted mb-4">Key ranges and features for supported models.</p>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold mb-3">MD300CN350R</h5>
                <table class="table table-bordered mb-0">
                    <tbody>
                        <tr><th>SpO₂</th><td>70–100% (±2%)</td></tr>
                        <tr><th>Pulse Rate</th><td>30–250 bpm (±2 bpm)</td></tr>
                        <tr><th>Respiratory Rate</th><td>4–45 rpm</td></tr>
                        <tr><th>Perfusion Index</th><td>0.3–20%</td></tr>
                        <tr><th>Display</th><td>Dual‑color OLED, 6 display modes</td></tr>
                        <tr><th>Battery</th><td>2× AAA, low power</td></tr>
                        <tr><th>Weight</th><td>≈50 g (incl. batteries)</td></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card card-soft p-4 h-100">
                <h5 class="fw-bold mb-3">MD300CN33A</h5>
                <table class="table table-bordered mb-0">
                    <tbody>
                        <tr><th>SpO₂</th><td>35–100% (±2%)</td></tr>
                        <tr><th>Pulse Rate</th><td>25–250 bpm (±2 bpm)</td></tr>
                        <tr><th>Perfusion Index</th><td>0.2–20%</td></tr>
                        <tr><th>Display</th><td>Dual‑color OLED, 6 brightness levels</td></tr>
                        <tr><th>Battery</th><td>2× AAA, energy‑efficient</td></tr>
                        <tr><th>Weight</th><td>≈50 g (incl. batteries)</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>