@{
    ViewData["Title"] = "Pricing";
}

<div class="container py-5">
    <h1 class="section-title">Pricing</h1>
    <p class="lead-muted mb-4">Transparent pricing with fast fulfillment. Bulk and clinic orders welcome.</p>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card card-soft h-100">
                <div class="card-body">
                    <h5 class="fw-bold mb-1">MD300CN350R</h5>
                    <div class="display-6 fw-bold">$XX.99</div>
                    <ul class="mt-3 mb-0">
                        <li>Ships from U.S.</li>
                        <li>30‑day return window</li>
                        <li>1‑year limited warranty</li>
                    </ul>
                    <a href="https://www.amazon.com/dp/YOURPRODUCTID" target="_blank" class="btn btn-brand mt-3 w-100">Buy on Amazon</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-soft h-100 border border-success">
                <div class="card-body">
                    <h5 class="fw-bold mb-1">MD300CN33A</h5>
                    <div class="display-6 fw-bold">$YY.99</div>
                    <ul class="mt-3 mb-0">
                        <li>Ships from U.S.</li>
                        <li>30‑day return window</li>
                        <li>1‑year limited warranty</li>
                    </ul>
                    <a href="https://www.amazon.com/dp/YOURPRODUCTID33A" target="_blank" class="btn btn-brand mt-3 w-100">Buy on Amazon</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-soft h-100">
                <div class="card-body">
                    <h5 class="fw-bold mb-1">Clinic / Bulk Orders</h5>
                    <div class="display-6 fw-bold">Custom</div>
                    <ul class="mt-3 mb-0">
                        <li>Volume discounts</li>
                        <li>Invoice & purchase orders</li>
                        <li>Support & documentation</li>
                    </ul>
                    <a asp-action="Contact" class="btn btn-ghost mt-3 w-100">Request a quote</a>
                </div>
            </div>
        </div>
    </div>
</div>
