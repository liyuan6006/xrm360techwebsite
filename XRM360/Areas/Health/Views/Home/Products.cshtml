@{
    ViewData["Title"] = "Products";
}

<div class="container py-5">
    <h1 class="section-title">Products</h1>
    <p class="lead-muted mb-4">ChoiceMMed pulse oximeters from an authorized U.S. reseller.</p>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card card-soft h-100">
                <div id="carousel350R" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active"><img src="~/images/health/pulse-oximeter1.jpg" class="d-block w-100" alt="350R img1"></div>
                        <div class="carousel-item"><img src="~/images/health/pulse-oximeter2.jpg" class="d-block w-100" alt="350R img2"></div>
                        <div class="carousel-item"><img src="~/images/health/pulse-oximeter3.jpg" class="d-block w-100" alt="350R img3"></div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carousel350R" data-bs-slide="prev"><span class="carousel-control-prev-icon"></span></button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carousel350R" data-bs-slide="next"><span class="carousel-control-next-icon"></span></button>
                </div>
                <div class="p-4">
                    <h5 class="fw-bold">MD300CN350R</h5>
                    <ul>
                        <li>SpO₂ 70–100% (±2%)</li>
                        <li>Pulse 30–250 bpm (±2 bpm)</li>
                        <li>PI 0.3–20%, RR 4–45 rpm</li>
                        <li>Dual‑color OLED, 6 modes</li>
                    </ul>
                    <a href="https://www.amazon.com/dp/YOURPRODUCTID" target="_blank" class="btn btn-brand w-100">Buy on Amazon</a>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card card-soft h-100">
                <div id="carousel33A" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active"><img src="~/images/health/M330A-1.png" class="d-block w-100" alt="33A img1"></div>
                        <div class="carousel-item"><img src="~/images/health/M330A-2.png" class="d-block w-100" alt="33A img2"></div>
                        <div class="carousel-item"><img src="~/images/health/M330A-3.png" class="d-block w-100" alt="33A img3"></div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carousel33A" data-bs-slide="prev"><span class="carousel-control-prev-icon"></span></button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carousel33A" data-bs-slide="next"><span class="carousel-control-next-icon"></span></button>
                </div>
                <div class="p-4">
                    <h5 class="fw-bold">MD300CN33A</h5>
                    <ul>
                        <li>SpO₂ 35–100% (±2%)</li>
                        <li>Pulse 25–250 bpm (±2 bpm)</li>
                        <li>PI 0.2–20%</li>
                        <li>Dual‑color OLED, 6 brightness levels</li>
                    </ul>
                    <a href="https://www.amazon.com/dp/YOURPRODUCTID33A" target="_blank" class="btn btn-ghost w-100">View on Amazon</a>
                </div>
            </div>
        </div>
    </div>
</div>