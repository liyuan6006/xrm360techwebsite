@{
    Layout = ViewBag.Layout;
    ViewData["Title"] = "联系 XRM360 科技公司";
}

<style>
    .contact-container {
        max-width: 750px;
        margin: 50px auto;
        padding: 50px 40px;
        background: rgba(0, 0, 0, 0.65);
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        text-align: center;
        color: #fff;
        position: relative;
        overflow: hidden;
    }

        /* ✅ Nature background */
        .contact-container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/images/contactus/contacus_background.png') center / cover no-repeat;
            opacity: 0.35;
            z-index: 0;
        }

        .contact-container h2 {
            font-size: 2rem;
            margin-bottom: 15px;
            color: #00d1ff;
            position: relative;
            z-index: 1;
        }

        .contact-container p {
            font-size: 1.1rem;
            margin-bottom: 25px;
            position: relative;
            z-index: 1;
        }

        .contact-container .btn {
            font-size: 1.1rem;
            padding: 12px 24px;
            border-radius: 8px;
            background: #00d1ff;
            border: none;
            color: #000;
            text-decoration: none;
            position: relative;
            z-index: 1;
            transition: background 0.3s ease;
        }

            .contact-container .btn:hover {
                background: #00a8cc;
                color: #fff;
            }

    /* ✅ Contact Info */
    .contact-info {
        list-style: none;
        padding: 0;
        margin: 25px 0 0;
        position: relative;
        z-index: 1;
        font-size: 1.1rem;
        text-align: left; /* ✅ Force left alignment */
        display: inline-block; /* ✅ Keeps list compact while left-aligned */
    }

        .contact-info li {
            margin: 10px 0;
        }

            .contact-info li strong {
                color: #00d1ff;
            }
</style>

<div class="contact-container">
