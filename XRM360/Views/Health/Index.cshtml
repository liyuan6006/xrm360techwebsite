<style>
    .hero-background {
        position: relative;
        height: 280px;
        background: url('/images/puse-oximter-banner2.png') center 40% / cover no-repeat;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .authorized-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 150px;
        background: transparent;
    }

    .spec-table th {
        background: #f8f9fa;
    }

    .authorized-badge {
        width: 50px; /* adjust size */
        height: auto; /* maintain ratio */
    }

    #productCarousel2 .carousel-item img {
        height: 350px; /* Adjust as needed */
        object-fit: contain; /* Keeps aspect ratio without cropping */
        background: #fff; /* White background for better appearance */
