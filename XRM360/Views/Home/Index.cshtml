@{
    ViewData["Title"] = "Welcome to XRM360 Technologies";
}

<style>
    body {
        background-image: url('/images/background.png'); /* Replace with your image path */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
    }

    .homepage-container {
        padding: 60px 20px;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.1);
        border: none;
        border-radius: 12px;
        color: white;
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .btn-primary, .btn-success {
        border: none;
        padding: 10px 20px;
        font-size: 1.1rem;
    }

    h1.display-4 {
        font-weight: bold;
    }
</style>

<div class="text-center homepage-container">
    <h1 class="display-4">Welcome to XRM360</h1>
    <p class="lead">Empowering global health and education with innovation.</p>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <h2>XRM360 Health</h2>
                <p>Explore our health devices to improve well-being and monitor vital signs.</p>
                <a class="btn btn-primary" href="/Health">Learn More</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <h2>XRM360 Education</h2>
                <p>Helping international students prepare and succeed at U.S. universities.</p>
                <a class="btn btn-success" href="/Education">Learn More</a>
            </div>
        </div>
    </div>
</div>
