<style>
    /* ✅ Carousel Banner */
    .banner-carousel {
        position: relative;
        height: 320px;
        overflow: hidden;
    }

        .banner-carousel .carousel-item img {
            height: 320px;
            width: 100%;
            object-fit: cover;
        }

    .banner-caption {
        font-size: 1.3rem;
        font-weight: 500;
        background: rgba(0, 0, 0, 0.5);
        padding: 10px;
        border-radius: 5px;
    }

    .carousel-indicators [data-bs-target] {
        background-color: #00d1ff;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: invert(1);
    }

    /* ✅ Reusable Button */
    .btn-tech {
        background: #00d1ff;
        color: #000;
        padding: 12px 25px;
        font-size: 1.1rem;
        border-radius: 8px;
        display: block;
        width: 220px;
        margin: 30px auto 0;
        text-align: center;
        text-decoration: none;
        transition: background 0.3s ease;
    }

        .btn-tech:hover {
            background: #00a8cc;
            color: #fff;
        }

    /* ✅ Mobile Responsive */
    @@media (max-width: 768px) {
        .carousel-caption {
            display: block !important;
            bottom: 10px !important;
            background: rgba(0, 0, 0, 0.6);
            padding: 5px 8px;
            border-radius: 3px;
        }

            .carousel-caption .banner-caption {
                font-size: 0.9rem;
            }
    }

    /* ✅ Successful Cases Section */
    .cases-section {
        max-width: 1200px;
        margin: 40px auto;
        padding: 40px 20px;
        color: #fff;
        background: rgba(0, 0, 0, 0.8);
        border-radius: 10px;
        text-align: center;
    }

        .cases-section h2 {
            color: #00d1ff;
            margin-bottom: 25px;
        }

    .cases-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
    }

    .case-card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .case-card img {
            width: 100%;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .case-card:hover {
            transform: scale(1.03);
            box-shadow: 0 0 10px rgba(0, 209, 255, 0.5);
        }

        .case-card h3 {
            color: #00d1ff;
            margin: 10px 0;
            font-size: 1.2rem;
        }

    .case-details {
        display: none;
        text-align: left;
        padding-left: 20px;
        list-style-position: outside;
    }

    /* ✅ Custom Website Build Section */
    .custom-website-section {
        background: rgba(0, 0, 0, 0.8);
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        border-radius: 10px;
        color: #fff;
        position: relative;
    }


        .custom-website-section h2 {
            color: #00d1ff;
            text-align: center;
            margin-bottom: 15px;
        }

        .custom-website-section ul {
            list-style: none;
            padding: 0;
            font-size: 1.1rem;
            line-height: 1.6;
        }

            .custom-website-section ul li {
                padding: 10px 15px 10px 40px;
                background: rgba(255,255,255,0.08);
                margin: 8px 0;
                border-left: 4px solid #00d1ff;
                border-radius: 5px;
                position: relative;
                transition: all 0.3s ease;
            }


    /* ✅ Expandable Button */
    .expand-btn {
        background: #00d1ff;
        color: #000;
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        font-size: 1.1rem;
        cursor: pointer;
        display: block;
        margin: 0 auto 10px;
        transition: background 0.3s;
    }

        .expand-btn:hover {
            background: #00a8cc;
            color: #fff;
        }

    /* ✅ Expandable Content */
    .expand-content {

        max-height: 0;
        overflow: hidden;
        opacity: 0;
        transition: max-height 0.6s ease, opacity 0.3s ease;
    }

        .expand-content.open {
            max-height: 5000px; /* large enough to cover any content */
            opacity: 1;
        }

    .table-responsive {
        width: 100%;
        overflow-x: auto; /* ✅ enables horizontal scroll on small screens */
        -webkit-overflow-scrolling: touch; /* ✅ smooth scrolling on iOS */
    }

        .table-responsive table {
            width: 100%;
            border-collapse: collapse;
            min-width: 400px; /* ✅ prevent table from collapsing too much */
        }

    /* ✅ Comparison Table */
    .comparison-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .comparison-table th, .comparison-table td {
            border: 1px solid rgba(255,255,255,0.2);
            padding: 10px;
            text-align: center;
            transition: color 0.3s ease, background 0.3s ease;
        }

        .comparison-table th {
            background: #00d1ff;
            color: #000;
        }

        .comparison-table tr:hover {
            background: rgba(0, 209, 255, 0.1);
            transform: scale(1.01);
        }

            .comparison-table tr:hover td {
                color: #00d1ff;
            }

    /* ✅ Hover Effects */
