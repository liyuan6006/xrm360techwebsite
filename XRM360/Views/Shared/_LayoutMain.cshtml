@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] · XRM360</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            --ink: #0f172a;
            --muted: #64748b;
            --bg: #f8fafc;
            --brand: #111827; /* neutral/dark for parent brand */
            --soft: #ffffff;
            /* section accent swatches to hint the 3 divisions */
            --sw-soft: #2563eb; /* software (blue) */
            --sw-health: #10b981; /* health (emerald) */
            --sw-edu: #7c3aed; /* education (violet) */
        }

        body {
            background: var(--bg);
            color: var(--ink);
        }

        .navbar-brand img {
            height: 40px;
        }

        .hero {
            background: radial-gradient(1200px 600px at 10% -10%, rgba(37,99,235,.10), transparent), radial-gradient(1000px 500px at 90% -20%, rgba(16,185,129,.10), transparent), radial-gradient(800px 400px at 50% -30%, rgba(124,58,237,.10), transparent);
            padding: 72px 0 48px;
        }

            .hero h1 {
                font-weight: 800;
                letter-spacing: .2px;
            }

        .eyebrow {
            color: #6b7280;
            text-transform: uppercase;
            font-size: .8rem;
            letter-spacing: .12rem;
            font-weight: 700;
        }

        .lead-muted {
            color: var(--muted);
        }

        .card-soft {
            background: var(--soft);
            border: 0;
            border-radius: 18px;
            box-shadow: 0 10px 30px rgba(2,6,23,.06), 0 2px 10px rgba(2,6,23,.04);
        }

        .pill {
            border-radius: 999px;
            padding: .4rem .7rem;
            font-weight: 600;
            font-size: .85rem;
            border: 1px solid rgba(17,24,39,.08);
            color: #374151;
            background: #fff;
        }

        .btn-darkbrand {
            background: var(--brand);
            color: #fff;
        }

            .btn-darkbrand:hover {
                background: #000;
                color: #fff;
            }

        .tag {
            border-radius: 999px;
            padding: .25rem .6rem;
            font-size: .75rem;
            font-weight: 600;
        }

        .tag-sw {
            background: rgba(37,99,235,.12);
            color: var(--sw-soft);
        }

        .tag-health {
            background: rgba(16,185,129,.12);
            color: var(--sw-health);
        }

        .tag-edu {
            background: rgba(124,58,237,.12);
            color: var(--sw-edu);
        }

        footer {
            color: #6b7280;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo/logo7.png" alt="XRM360 Logo" class="me-2" />
                <span class="fw-bold">XRM360</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#rootNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="rootNav" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <!-- Link to areas via Tag Helpers -->
                    <li class="nav-item"><a class="nav-link" asp-area="SoftwareSolutions" asp-controller="Home" asp-action="Index">Software</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Education" asp-controller="Home" asp-action="Index">Education</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Health" asp-controller="Home" asp-action="Index">Health</a></li>
                    <li class="nav-item ms-2">
                        <a class="btn btn-darkbrand" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main>@RenderBody()</main>

    <footer class="border-top mt-5">
        <div class="container py-4 small">
            <div class="row g-3 align-items-center">
                <div class="col-md">© @DateTime.UtcNow.Year XRM360 Technologies LLC</div>
                <div class="col-md text-md-end">
                    <span class="me-3"><i class="bi bi-award me-1"></i>Quality first</span>
                    <span class="me-3"><i class="bi bi-shield-check me-1"></i>Security minded</span>
                    <span><i class="bi bi-globe2 me-1"></i>Bilingual support</span>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
